{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "es2020",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "../server_dist",
    "verbatimModuleSyntax": true
  },
  "include": [
    "./",
    "../game",
    "../tests"
  ]
}
